<settings>
	<setting propertyKey="@Properties.ActivityType" title="@Strings.ActivityTypeTitle">
		<settingConfig type="list">
			<listEntry value="0">@Strings.ActivityTypeSteps</listEntry>
			<listEntry value="6">@Strings.ActivityTypeStepsPercentage</listEntry>
			<listEntry value="7">@Strings.ActivityTypeStepsLeft</listEntry>
			<listEntry value="1">@Strings.ActivityTypeFloors</listEntry>
			<listEntry value="2">@Strings.ActivityTypeHR</listEntry>
			<listEntry value="3">@Strings.ActivityTypeCalories</listEntry>
			<listEntry value="4">@Strings.ActivityTypeDistance</listEntry>
			<listEntry value="5">@Strings.ActivityTypeMoveBar</listEntry>
			<listEntry value="100">@Strings.DeviceBattery</listEntry>
		</settingConfig>
	</setting>

	<setting propertyKey="@Properties.DateFormat" title="@Strings.DateFormatTitle">
		<settingConfig type="list">
			<listEntry value="0">@Strings.DateFormatNone</listEntry>
			<listEntry value="1">@Strings.DateFormatDDdotMM</listEntry>
		</settingConfig>
	</setting>

	<setting propertyKey="@Properties.BackgroundColor" title="@Strings.BackgroundColorTitle" prompt="@Strings.BackgroundColorPrompt">
		<settingConfig type="list">
			<listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
			<listEntry value="0xAAAAAA">@Strings.ColorLightGray</listEntry>
			<listEntry value="0x555555">@Strings.ColorDarkGray</listEntry>
			<listEntry value="0x000000">@Strings.ColorBlack</listEntry>
			<listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
			<listEntry value="0xAA0000">@Strings.ColorDarkRed</listEntry>
			<listEntry value="0xFF5500">@Strings.ColorOrange</listEntry>
			<listEntry value="0xFFAA00">@Strings.ColorYellow</listEntry>
			<listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
			<listEntry value="0x00AA00">@Strings.ColorDarkGreen</listEntry>
			<listEntry value="0x00AAFF">@Strings.ColorCyan</listEntry>
			<listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
			<listEntry value="0x5500AA">@Strings.ColorPurple</listEntry>
			<listEntry value="0xFF00FF">@Strings.ColorPink</listEntry>
			<listEntry value="-1"      >@Strings.ColorCustom</listEntry>
		</settingConfig>
	</setting>

	<setting propertyKey="@Properties.ForegroundColor" title="@Strings.ForegroundColorTitle" prompt="@Strings.ForegroundColorPrompt">
		<settingConfig type="list">
			<listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
			<listEntry value="0xAAAAAA">@Strings.ColorLightGray</listEntry>
			<listEntry value="0x555555">@Strings.ColorDarkGray</listEntry>
			<listEntry value="0x000000">@Strings.ColorBlack</listEntry>
			<listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
			<listEntry value="0xAA0000">@Strings.ColorDarkRed</listEntry>
			<listEntry value="0xFF5500">@Strings.ColorOrange</listEntry>
			<listEntry value="0xFFAA00">@Strings.ColorYellow</listEntry>
			<listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
			<listEntry value="0x00AA00">@Strings.ColorDarkGreen</listEntry>
			<listEntry value="0x00AAFF">@Strings.ColorCyan</listEntry>
			<listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
			<listEntry value="0x5500AA">@Strings.ColorPurple</listEntry>
			<listEntry value="0xFF00FF">@Strings.ColorPink</listEntry>
			<listEntry value="-1"      >@Strings.ColorCustom</listEntry>
		</settingConfig>
	</setting>

	<!-- Garmin color hex codes - https://developer.garmin.com/connect-iq/user-experience-guide/page-layout/ -->

	<setting propertyKey="@Properties.CustomBackgroundColor" title="@Strings.CustomBackgroundColorTitle"
		prompt="@Strings.CustomColorPrompt" helpUrl="https://developer.garmin.com/connect-iq/user-experience-guide/page-layout/">
		<settingConfig type="alphaNumeric" maxLength="6" errorMessage="@Strings.CustomColorPrompt" />
	</setting>

	<setting propertyKey="@Properties.CustomForegroundColor" title="@Strings.CustomForegroundColorTitle"
		prompt="@Strings.CustomColorPrompt" helpUrl="https://developer.garmin.com/connect-iq/user-experience-guide/page-layout/">
		<settingConfig type="alphaNumeric" maxLength="6" errorMessage="@Strings.CustomColorPrompt" />
	</setting>

</settings>
